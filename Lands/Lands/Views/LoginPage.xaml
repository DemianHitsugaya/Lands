<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lands.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout Padding="10,20,10,5">
            <Label Text="Lands" HorizontalOptions="CenterAndExpand"
                   FontAttributes="Bold"
                   FontSize="Large"
                   />
            <Image Source="onu"
                   WidthRequest="200"></Image>
            <Label Text="Email"/>
            <Entry Placeholder="Enter your email"
                   Keyboard="Email">
            </Entry>
            <Label Text="Password"/>
            <Entry Placeholder="Enter your password"
                   IsPassword="True">
            </Entry>
            <ActivityIndicator>
                
            </ActivityIndicator>
            <Button Text="Login" BackgroundColor="Navy" TextColor="White" BorderRadius="23"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>